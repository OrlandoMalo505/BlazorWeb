@page "/blazor/parentComponent"
<h3>Parent Child Relation</h3>
<CascadingValue Value="@MessageForGrandChild" Name="message">
    <CascadingValue Value="@LuckyNumber" Name="lucky"> 
<_ChildComponent @ref="childComponent" Title="This is a title passed as parameter." OnButtonClick="ShowMessage">
    <ChildContent> hello this is render fragment</ChildContent>  
</_ChildComponent>
<p><b>@messageText</b></p>
<_AnotherChildComponent placeholder="Enter name from parent"></_AnotherChildComponent>
</CascadingValue>
</CascadingValue>

<div class="row">
    <button class="btn btn-success" @onclick="()=>childComponent.ToastrSuccess()">Show Toastr</button>
</div>


@code {
    public _ChildComponent childComponent { get; set; }
    public string MessageForGrandChild = "hello from parent";
    public string LuckyNumber = "7";
    public string messageText = "";

    private void ShowMessage()
    {
        messageText = "Hello button from Child Component.";
    }

}
